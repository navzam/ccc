<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<useStyles filename="nifty-default-styles.xml" />
 	<useControls filename="nifty-default-controls.xml" />
	<screen id="start" controller="StartScreenAppState">
		<layer id="foreground" backgroundColor="#0000" childLayout="vertical">
			<panel id="panel_top" height="30%" width="100%" align="center" childLayout="vertical">
				<text text="Cool Computer Cube" font="Interface/Fonts/Default.fnt" width="100%" height="70%" />
			</panel>
			<panel id="panel_mid" height="50%" width="100%" />
			<panel id="panel_bottom" height="20%" width="100%" align="center" childLayout="vertical">
				<control name="button" label="Free play" id="FreePlayButton" align="center" valign="center">
					<interact onClick="switchToFreePlay()" />
				</control>
				<control name="button" label="Timed play" id="TimedPlayButton" align="center" valign="center">
					<interact onClick="switchToTimedPlay()" />
				</control>
				<control name="button" label="Settings" id="SettingsButton" align="center" valign="center">
					<interact onClick="openSettings()" />
				</control>
				<control name="button" label="Quit" id="QuitButton" align="center" valign="center">
					<interact onClick="quitGame()" />
				</control>
			</panel>
		</layer>
		<layer id="layer_settings" backgroundColor="#0008" childLayout="absolute" visible="false" >
			<control name="window" id="window_settings" title="Display Settings" closeable="false" width="35%" height="35%" x="10%" y="20%">
				<panel id="panel_vert" height="100%" width="100%" align="center" childLayout="vertical" style="nifty-panel">				
					<panel id="panel_fs" height="20%" width="100%" align="center" childLayout="horizontal">
						<text text="Fullscreen: " style="base-font" color="#eeef" />
						<panel width="*" />
						<control name="checkbox" id="fs_checkbox" />
					</panel>
					<panel id="panel_vs" height="20%" width="100%" align="center" childLayout="horizontal">
						<text text="Vsync: " style="base-font" color="#eeef" />
						<panel width="*" />
						<control name="checkbox" id="vs_checkbox" />
					</panel>
					<panel id="panel_sr" height="20%" width="100%" align="center" childLayout="horizontal">
						<text text="Screen resolution: " style="base-font" color="#eeef" />
						<panel width="*" />
						<control name="dropDown" id="sr_dropdown" />
					</panel>
					<panel id="panel_aa" height="20%" width="100%" align="center" childLayout="horizontal">
						<text text="Anti-aliasing (samples): " style="base-font" color="#eeef" />
						<panel width="*" />
						<control name="dropDown" id="aa_dropdown" />
					</panel>
					<panel id="panel_bot" height="20%" width="100%" align="center" childLayout="horizontal">
						<panel height="100%" width="*" />
						<control name="button" label="Apply" id="apply_button" align="right" valign="center">
							<interact onClick="applySettings()" />
						</control>
						<control name="button" label="Close" id="close_button" align="right" valign="center">
							<interact onClick="closeSettings()" />
						</control>
					</panel>
				</panel>
			</control>
		</layer>
	</screen>
	
	<screen id="overlay" controller="OverlayAppState">
		<layer id="foreground" backgroundColor="#0000" childLayout="vertical">
			<panel id="panel_top" height="95%" width="100%" align="center" childLayout="vertical" />
			<panel id="panel_bottom" height="5%" width="100%" align="center" childLayout="vertical">
				<control name="button" label="Scramble" id="ScrambleButton" align="right" valign="top">
					<interact onClick="scrambleCube()" />
				</control>
			</panel>
		</layer>
	</screen>
</nifty>